{
  "source": ["json/**/*.json"],
  "platforms": {
    "ios-swift": {
      "transformGroup": "ios-swift",
      "buildPath": "build/ios-swift/",
      "transforms": ["swift/color", "swift/font"],
      "prefix": "charcoal",
      "files": [
        {
          "destination": "StyleDictionary+Class.swift",
          "format": "ios-swift/class.swift",
          "options": {
            "className": "StyleDictionaryClass"
          }
        },
        {
          "destination": "StyleDictionary+Enum.swift",
          "format": "ios-swift/enum.swift",
          "options": {
            "className": "StyleDictionaryEnum"
          }
        },
        {
          "destination": "StyleDictionary+Struct.swift",
          "format": "ios-swift/any.swift",
          "options": {
            "className": "StyleDictionaryStruct",
            "imports": "SwiftUI",
            "objectType": "struct",
            "accessControl": "internal"
          }
        }
      ]
    },
    "ios-swift-separate-enums": {
      "transformGroup": "ios-swift-separate",
      "buildPath": "build/ios-swift/",
      "transforms": ["swift/color", "swift/font"],
      "files": [
        {
          "destination": "CharcoalTexts.swift",
          "format": "ios-swift/enum.swift",
          "options": {
            "className": "CharcoalTexts"
          },
          "filter": "charcoal-text-filter"
        },
        {
          "destination": "CharcoalColors.swift",
          "format": "ios-swift/enum.swift",
          "options": {
            "className": "CharcoalColors"
          },
          "filter": "charcoal-color-filter"
        },
        {
          "destination": "CharcoalBorderRadius.swift",
          "format": "ios-swift/enum.swift",
          "options": {
            "className": "CharcoalBorderRadius"
          },
          "filter": "charcoal-border-radius-filter"
        },
        {
          "destination": "CharcoalSpacings.swift",
          "format": "ios-swift/enum.swift",
          "options": {
            "className": "CharcoalSpacings"
          },
          "filter": "charcoal-spacings-filter"
        }
      ]
    }
  }
}
