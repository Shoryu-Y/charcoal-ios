{
  "source": ["json/**/*.json"],
  "platforms": {
    "ios-swift-separate-enums": {
      "transformGroup": "ios-swift-separate",
      "buildPath": "build/ios-swift/",
      "transforms": ["swift/color", "swift/font"],
      "files": [
        {
          "destination": "CharcoalTypography.swift",
          "format": "charcoalSturctFormat",
          "options": {
            "nameSpacing": "CharcoalFoundation",
            "className": "Typography: CaseIterable",
            "enumPropertyName": "value",
            "enumPropertyType": "Int",
            "enumPropertyJSTypeGuard": "number"
          },
          "filter": "charcoal-text-filter"
        },
        {
          "destination": "CharcoalColors.swift",
          "format": "charcoalColorEnumFormat",
          "options": {
            "nameSpacing": "CharcoalFoundation",
            "className": "Colors: CaseIterable",
            "enumPropertyName": "value",
            "enumPropertyType": "UIColor"
          },
          "filter": "charcoal-color-filter"
        },
        {
          "destination": "CharcoalBorderRadius.swift",
          "format": "charcoalSturctFormat",
          "options": {
            "nameSpacing": "CharcoalFoundation",
            "className": "BorderRadius: CaseIterable",
            "enumPropertyName": "value",
            "enumPropertyType": "Int",
            "enumPropertyJSTypeGuard": "number"
          },
          "filter": "charcoal-border-radius-filter"
        },
        {
          "destination": "CharcoalSpacings.swift",
          "format": "charcoalSturctFormat",
          "options": {
            "nameSpacing": "CharcoalFoundation",
            "className": "Spacings: CaseIterable",
            "enumPropertyName": "value",
            "enumPropertyType": "Int",
            "enumPropertyJSTypeGuard": "number"
          },
          "filter": "charcoal-spacings-filter"
        }
      ]
    }
  }
}
